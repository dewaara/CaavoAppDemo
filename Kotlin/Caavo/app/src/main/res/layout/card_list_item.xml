<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_background"
        android:background="#FDF9EE"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/delete_icon"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:background="@drawable/rounded"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/caavo" />

        <TextView
            android:id="@+id/name"
            android:gravity="center_horizontal"
            android:text="Ansari Halim"
            android:textColor="@color/itemName"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/description"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/Description"
            android:textSize="12sp"
            android:textStyle="italic"
            android:text="Ham tum or kon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/price"
            android:layout_marginTop="150dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/Description"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="4">

            <ImageView
                android:id="@+id/img_decrease"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_remove_circle_outline_24" />

            <TextView
                android:id="@+id/txt_cart_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="1"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/img_increase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_add_24" />

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>